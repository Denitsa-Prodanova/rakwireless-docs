span.site-name.can-hide, .repo-link {
    display: none!important;
}

table {
    width: 100%;
    display: table;
    text-align: center;
}

html, body
  padding 0
  margin 0
  background-color #fff

.page
  padding-left $sidebarWidth

h1, h2, h3, h4, h5, h6
  font-weight 500
  line-height 1.25
  
h1
  font-size 2.2rem

h2
  font-size 1.65rem
  padding-bottom .3rem
  border-bottom 1px solid $borderColor

h3
  font-size 1.35rem
  padding-bottom .3rem
  border-bottom 1px solid $borderColor